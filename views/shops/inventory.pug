extends ../layout

block stylesheets
    link(rel="stylesheet"
        type="text/css"
        href="https://cdnjs.cloudflare.com/ajax/libs/twitter-bootstrap/4.1.3/css/bootstrap.css")
    link(rel="stylesheet"
        type="text/css"
        href="https://cdn.datatables.net/1.10.19/css/dataTables.bootstrap4.min.css")

block scripts
    script(type="text/javascript" 
        charset="utf8" 
        src="https://cdn.datatables.net/1.10.19/js/jquery.dataTables.min.js")
    script(type="text/javascript" 
        charset="utf8" 
        src="https://cdn.datatables.net/1.10.19/js/dataTables.bootstrap4.min.js")
    script.
        $(document).ready(function() { 
            $('#table_id').DataTable({
                ajax: {
                    url: '/shops/5c8cee745d99d8037fbd0a15/api/inventories',
                    dataSrc: 'data'
                },
                columns: [
                    { data: 'name' }, 
                    { data: 'brand' }, 
                    { data: 'color' }, 
                    { data: 'quantity' }, 
                    { data: 'list_price' }, 
                ]
            });
        });

block content
    .card.card-body(width="100%")
        .table-responsive
            table#table_id.table.table-bordered(width="100%")
                thead
                    tr
                        th Name
                        th Brand
                        th Color 
                        th Quantity 
                        th Buying Price
                tbody
