extends ../layout

block stylesheets
    link(rel="stylesheet" 
        href="/stylesheets/autocomplete.css")

block content
    .container-fluid
        .row
            .col-8
                #accordion
                    .card.mt-2.bg-white.shadow.rounded
                        include index/productCard
                    .card.mt-2.bg-white.shadow.rounded
                        include index/customerCard
                    .card.mt-2.bg-white.shadow.rounded
                        include index/paymentCard
                    .card.mt-2.mb-2.bg-white.shadow.rounded
                        include index/reviewCard
            .col-4
                h6.d-flex.justify-content-between.align-items-center.mt-2
                    span.text-muted Your Cart
                    span#itemsInCart.badge.badge-secondary.badge-pill.float-right 0
                ul#list.list-group.mb-2(style="display: none;")  
                .card(style="background-color: rgb(233, 236, 239);")
                    .card-body
                        div
                            | Total (MMK) :
                            span#finalPrice.float-right 0 

block scripts
    script(src="/javascripts/jquery.flexdatalist.min.js")
    script(src="/javascripts/autocomplete.js")
    script(src="/javascripts/javascript.js")
