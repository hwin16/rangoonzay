doctype html
html(lang='en')
    head
        meta(charset='utf-8')
        meta(name='viewport', 
            content='width=device-width, initial-scale=1, shrink-to-fit=no')

        link(rel='stylesheet', 
            href='https://stackpath.bootstrapcdn.com/bootstrap/4.3.1/css/bootstrap.min.css', 
            integrity='sha384-ggOyR0iXCbMQv3Xipma34MD+dH/1fQ784/j6cY/iJTQUOhcWr7x9JvoRxT2MZw1T', 
            crossorigin='anonymous')

        style.
            .dotted-border { 
                border-style: dashed;
            }

        title Hello, world!
    body
        .container
            .row
                .col 
                    // Large modal
                    button.btn.btn-primary(type='button', data-toggle='modal', data-target='.bd-example-modal-lg') Large modal
                    .modal.fade.bd-example-modal-lg(tabindex='-1', role='dialog', aria-labelledby='myLargeModalLabel', aria-hidden='true')
                        .modal-dialog
                            .modal-content
                                .modal-header
                                    h5#exampleModalLabel.modal-title Add Inventory
                                    button.close(type='button', data-dismiss='modal', aria-label='Close')
                                        span(aria-hidden='true') Ã—
                                .modal-body
                                    form
                                        .form-group.row
                                            label.col-sm-3.col-form-label(for='inputName') Name
                                            .col-sm-9
                                                input#inputName.form-control.text-center(type='text', placeholder='Name')
                                        .form-group.row
                                            label.col-sm-3.col-form-label(for='inputCategory') Category
                                            .col-sm-9
                                                input#inputCategory.form-control.text-center(type='text', placeholder='Category')
                                        .form-group.row
                                            label.col-sm-3.col-form-label(for='inputBrand') Brand
                                            .col-sm-9
                                                input#inputBrand.form-control.text-center(type='text', placeholder='Brand')
                                        .form-group.row
                                            label.col-sm-3.col-form-label(for='inputQuantity') Quantity
                                            .col-sm-9
                                                input#inputQuantity.form-control.text-center(type='number', placeholder='Quantity')
                                        .form-group.row
                                            label.col-sm-3.col-form-label(for='inputBuyingPrice') Buying Price
                                            .col-sm-9
                                                input#inputBuyingPrice.form-control.text-center(type='number', placeholder='Buying Price')
                                        .form-group.row
                                            label.col-sm-3.col-form-label(for='inputSellingPrice') Selling Price
                                            .col-sm-9
                                                input#inputSellingPrice.form-control.text-center(type='number', placeholder='Selling Price')
                                        .form-group.row#qrCode
                                            label.col-sm-3.col-form-label(for='inputQRCode') QR Code
                                            .col-sm-9
                                                button.btn.btn-primary(type="button") Generate
                                        .form-group
                                            label(for='uploadImages') Upload Images
                                            .col-sm-12.card.card-body.dotted-border.pb-0
                                                .row
                                                    .col-sm-3.mb-4
                                                        .card.card-body.dotted-border 
                                                            div.text-center
                                                                i.fas.fa-plus

                                .modal-footer
                                    button.btn.btn-secondary(type='button', data-dismiss='modal') Close
                                    button.btn.btn-primary(type='button') Submit
