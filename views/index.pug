extends layout

block stylesheets
    link(rel="stylesheet" 
        href="/stylesheets/autocomplete.css")

block content
    .container-fluid
        .row
            .col-8
                div(id="accordion")
                    div(class="card mt-2 bg-white shadow rounded")
                        include index/productCard  
                    div(class="card mt-2 bg-white shadow rounded")
                        include index/customerCard
                    div(class="card mt-2 bg-white shadow rounded")
                        include index/paymentCard
                    div(class="card mt-2 mb-2 bg-white shadow rounded")
                        include index/reviewCard
            .col-4
                h5(class="d-flex justify-content-between align-items-center mt-2") 
                    span.text-muted Your Cart
                    span(class="badge badge-secondary badge-pill float-right" 
                        id="itemsInCart") 0
                ul(class="list-group mb-2" 
                    id="list" 
                    style="display: none;") 
                .card(style="background-color: rgb(233, 236, 239);")
                    .card-body
                        div Total (MMK) :
                            span(class="float-right" 
                                id="finalPrice") 0 

block scripts
    script(src="/javascripts/jquery.flexdatalist.min.js")
    script(src="/javascripts/autocomplete.js")
    script(src="/javascripts/javascript.js")
