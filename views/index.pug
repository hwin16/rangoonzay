block content

  .container-fluid
    .row
      .col-8
        div(id="accordion")
          div(class="card mt-2 bg-white shadow rounded")
            h6(class="card-header bg-light text-center" data-toggle="collapse" data-target="#collapseProduct" aria-expanded="true" aria-controls="collapseProduct") Product
            div(id="collapseProduct" class="collapse show" aria-labelledby="collapseProduct" data-parent="#accordion")
              .card-body 
                .row 
                  .col-6
                    label(for="productName") Product Name
                    input(type="text" class="form-control" id="productName" name="productName" required)
                  .col-2
                    label(for="quantity") Quantity
                    input(type="number" class="form-control" id="quantity" name="quantity" required)
                  .col 
                    label(for="price") Price
                    .input-group
                      input(type="number" class="form-control" id="quantity" name="quantity" required)
                      .input-group-append
                        span(class="input-group-text") MMK
                hr
                button(class="btn btn-outline-dark float-right mb-3" data-toggle="collapse" data-target="#collapseCustomer" aria-expanded="true" aria-controls="collapseCustomer" type="button") Continue  

